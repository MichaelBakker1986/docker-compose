#install the ELK  stack with
#https://confluence.topicus.nl/display/IN4J/Logging
git clone https://github.com/deviantony/docker-elk
cd docker-elk
docker-compose up -d
- kibana UI: http://localhost:5601
- logstash enpoint: http://localhost:5000

#SecurityPortal
#All incoming requests are authenticated and authorized within this module.
#Authentication.js provides facebook identification
#Authorization.js provides fine-grained resource authorization
#SecurityPortal.js validates requests with Authentication and Authorization. Proxies them regarding collected information to Proxy.js