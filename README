#install git
#create SSH to repository
#if already have ssh key u can skip this part
ssh-keygen -t rsa

vim id_rsa.pub = {Public SSH key for Stash}

#----- VIA DOCKER
git clone ssh://git@stash.topicus.nl:7999/ff/fesjs.git
cd fesjs
docker-compose up

#----- VIA NODEJS
#expose ports
#set environment parameter FIGURE_DB_STRING postgresql://postgres:postgres@localhost/lme
sudo firewall-cmd --zone=public --add-port=7080/tcp -permanent
git clone ssh://git@stash.topicus.nl:7999/ff/fesjs.git
cd fesjs
npm install -g concurrently
npm install
docker-compose -f docker-compose-db.yml up
npm start

