<?xml version="1.0" encoding="UTF-8"?>
<project default="make-zipfile" name="Make_ZipFile">
	<tstamp>
        <format property="ldt" pattern="yyyy-MM-dd_HHmm" locale="en,UK" />
	</tstamp>
   	<target name="make-zipfile" description="Make the ZipFile">
	<!-- === RevisieMKB ==================================================================== -->
		<zip destfile="${basedir}/_ZipFile/STM_Configuration_${ldt}.zip">
  			<mappedresources>
				<fileset file="${basedir}/ScorecardTestModel/FFL/*.ffl" />
				<globmapper from="*" to="ffl.*" />
			</mappedresources>
			<mappedresources>
				<zipfileset file="${basedir}/ScorecardTestModel/Reports/*"/>
				<globmapper from="questionnaire-ScorecardTestModel.frb.xml" to="reports.questionnaire-scorecardtestmodel.frb-xml"/>
			</mappedresources>
			<mappedresources>
				<zipfileset file="${basedir}/ScorecardTestModel/Reports/*"/>
				<globmapper from="questionnaire-ScorecardTestModel.frb.rpt" to="reports.questionnaire-scorecardtestmodel.frb-rpt" />
			</mappedresources>
            </zip>
    </target>
</project>
