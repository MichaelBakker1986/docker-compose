{&&Language=English};Inc_LoopTest.fin

.Variables
PP    0 1N     1               "LoopTest"                                                          \LoopTestTotaal

PP    0 1N     2               "X = X + 1"                                                         \LoopTestX
PP    0 1N     2               "Y = X"                                                             \LoopTestY
PP    0 1N     2               "Z = Y"                                                             \LoopTestZ


PP    0 1N     2               "LoopWithCalculatedAggregation"                                     \LoopWithCalculatedAggregation

PIII  0 CN     3               "Var1"     	                                                       \LoopVar1
PIII  0 FN  *  3               "Var2"                                                              \LoopVar2
PIII  0=FN     3=              "Som"                                                               \LoopSom

.Formulas NoTrend
LoopTestX    = LoopTestX + 1
LoopTesty    = LoopTestX
LoopTestZ    = LoopTesty

.Formulas Trend
LoopVar1	 = LoopSom / 2
LoopVar2     = Self[T-1] + 1
