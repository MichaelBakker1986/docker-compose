<?xml version="1.0" encoding="UTF-8"?>
<project name="Make_ZipFile" default="make-zipfiles">
	<tstamp>
		<format property="ldt" pattern="yyyy-MM-dd" locale="en,UK" />
	</tstamp>

	<target name="make-zipfiles-total" description="Make a ZipFile">
		<mkdir dir="${basedir}/_ZipFile" />
		<delete>
			<fileset dir="${basedir}/_ZipFile/" includes="**/*.zip" />
		</delete>
		<antcall target="make-zipfile-reports" />
		<antcall target="make-zipfile-parameters" />
		<antcall target="make-zipfile-translations" />
		<antcall target="make-zipfile-ffl" />
		<antcall target="make-zipfile-xsd" />
		<antcall target="make-zipfile-mappings" />
		<antcall target="make-zipfile-screendefinitions" />
		<zip destfile="${basedir}/_ZipFile/configurations_triodos_${ldt}.zip">
			<fileset dir="${basedir}/_ZipFile" includes="*.zip" excludes="Triodos_documentatie_*.zip, configurations_triodos_*.zip" />
		</zip>
	</target>

	<target name="make-zipfiles" description="Make a ZipFile">
		<antcall target="make-zipfile-reports">
			<param name="filename_suffix">_test</param>
			<param name="forTestEnvironment">true</param>
		</antcall>
		<antcall target="make-zipfile-reports">
			<param name="filename_suffix">_release</param>
		</antcall>

		<antcall target="make-zipfile-parameters">
			<param name="filename_suffix">_test</param>
			<param name="forTestEnvironment">true</param>
		</antcall>
		<antcall target="make-zipfile-parameters">
			<param name="filename_suffix">_release</param>
		</antcall>

		<antcall target="make-zipfile-xsd" />
		<antcall target="make-zipfile-ffl" />
		<antcall target="make-zipfile-translations" />
		<antcall target="make-zipfile-mappings" />
		<antcall target="make-zipfile-screendefinitions" />

		<delete file="${basedir}/_ZipFile/configuration-${ldt}.zip" />
		<zip destfile="${basedir}/_ZipFile/configuration-${ldt}.zip">
			<fileset dir="${basedir}/_ZipFile/">
			    <include name="Triodos_*.zip"/>
			    <exclude name="Triodos_*_release*.zip"/>
			</fileset>
		</zip>

		<delete file="${basedir}/_ZipFile/configuration-release-${ldt}.zip" />
		<zip destfile="${basedir}/_ZipFile/configuration-release-${ldt}.zip">
			<fileset dir="${basedir}/_ZipFile/">
			    <include name="Triodos_*.zip"/>
			    <exclude name="Triodos_*_test*.zip"/>
			</fileset>
		</zip>


	</target>

	<target name="make-zipfiles-jenkins" description="Make a ZipFile">
		<antcall target="make-zipfile-reports" />
		<antcall target="make-zipfile-parameters" />
		<antcall target="make-zipfile-ffl" />
