		<antcall target="make-zipfile-xsd" />
		<antcall target="make-zipfile-mappings" />
		<antcall target="make-zipfile-screendefinitions" />
		<zip destfile="${basedir}/configurations_triodos_${ldt}.zip">
			<fileset dir="${basedir}/_ZipFile" includes="*.zip" excludes="Triodos_documentatie_*.zip" />
		</zip>
	</target>

