<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="ff-questionnaire-js-web" version="2.5">

  <display-name>ff-questionnaire-js-web</display-name>
 
   <servlet-mapping>
		<servlet-name>resteasy-servlet</servlet-name>
		<url-pattern>/rest/*</url-pattern> 
	</servlet-mapping>

	<!-- Auto scan REST service --> 
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- this should be the same URL pattern as the servlet-mapping property -->
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/rest</param-value>
	</context-param> 

	<listener>
		<listener-class>
			org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
			</listener-class>
	</listener>

	<servlet>
		<servlet-name>resteasy-servlet</servlet-name>
		<servlet-class>
			org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
		</servlet-class>
	</servlet> 
	
	<!-- JAAS CONFIGURATION -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>k3 application</web-resource-name>
      <description>Protects the main application</description>
      <url-pattern>/rest/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>accountmanager</role-name>
      <role-name>approver</role-name>
      <role-name>management</role-name>
      <role-name>default</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-role>
    <role-name>accountmanager</role-name>
  </security-role>

  <security-role>
    <role-name>approver</role-name>
  </security-role>

  <security-role>
    <role-name>management</role-name>
  </security-role>

  <security-role>
    <role-name>default</role-name>
  </security-role>
 
</web-app>